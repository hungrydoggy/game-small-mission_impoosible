              auto self = loadable->cast<DrawOption>();
              self->stencil_option = *sopt;
              self->use(DrawOption::EnableType::STENCIL_TEST);

              return Var(true);
            '''
    - AttributeFormat:
      full_name: 'back_stencil_option'
      short_name: 'bst'
      is_essential: false
      formats:
        - ValueFormat:
          type: 'Object'
          sub_type: 'StencilOption'
