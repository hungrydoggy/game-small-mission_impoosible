Obj:
  fnc:
    'select':
      '''{(NodeLoadable* loadable, string name)
        auto self = loadable->cast<GameComponent>();

        for (int ci=0; ci<self->getChildCount(); ++ci) {
          auto chl = self->getChild(ci);
          unlikely (chl == null)
            continue;

          chl->is_drawable_self(false);
        }

        auto chl = self->findChild(name);
        likely (chl != null)
          chl->is_drawable_self(true);
      '''
